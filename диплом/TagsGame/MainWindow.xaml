<mah:MetroWindow  x:Class="MiniGames.MainWindow"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniGames"
        mc:Ignorable="d"
        Title="Лаунчер с играми" 
        Height="250" Width="350"
        WindowStartupLocation="CenterScreen"          
        VerticalAlignment="Center" HorizontalAlignment="Center"
        Background="Gold"
        Foreground="Gold" Icon="Images\gameIcon.png">
    <Grid VerticalAlignment="Center" Height="232">

        <Grid.Background>
            <ImageBrush ImageSource="Images/backTag.jpg"/>
        </Grid.Background>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Играть в пятнашки" Click="Button_Start_Tag" Background="Black" Foreground="Gold" Padding="15" Margin="0 5"/>
            <Button Content="Играть в змейку" Background="Black" Foreground="Gold" Padding="15" Margin="0 10" Click="Button_Start_Snake"/>
            <Button Content="Выход" Click="Button_Exit" Background="Black" Foreground="Gold" Padding="15" RenderTransformOrigin="0.495,1.594"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
